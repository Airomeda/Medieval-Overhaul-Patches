<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>RimFantasy - Medieval Overhaul Edition</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[
					@Name="RF_BaseWeapon_ArcaneBattleAxes" or
					@Name="RF_BaseWeapon_ArcaneDaggers" or
					@Name="RF_BaseWeapon_ArcaneLongswords"]/recipeMaker/researchPrerequisite</xpath>
					<value>
						<researchPrerequisites>
							<li>RF_ArcaneWeapons</li>
							<li>LongBlades</li>
						</researchPrerequisites>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="RF_BaseWeapon_ArcaneBows"]/recipeMaker/researchPrerequisite</xpath>
					<value>
						<researchPrerequisites>
							<li>RF_ArcaneWeapons</li>
							<li>DankPyon_WarBow</li>
						</researchPrerequisites>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[
					@Name="RF_BaseWeapon_ArcaneHalberds" or
					@Name="RF_BaseWeapon_ArcaneSpears"]/recipeMaker/researchPrerequisite</xpath>
					<value>
						<researchPrerequisites>
							<li>RF_ArcaneWeapons</li>
							<li>DankPyon_NoblePolearms</li>
						</researchPrerequisites>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[
					@Name="RF_BaseWeapon_ArcaneWarHammers" or
					@Name="RF_BaseWeapon_ArcaneStaffs" or
					@Name="RF_BaseWeapon_ArcaneWands"]/recipeMaker/researchPrerequisite</xpath>
					<value>
						<researchPrerequisites>
							<li>RF_ArcaneWeapons</li>
							<li>DankPyon_NobleMaces</li>
						</researchPrerequisites>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="RF_BaseWeapon_ArcaneRings"]/recipeMaker/researchPrerequisite</xpath>
					<value>
						<researchPrerequisites>
							<li>RF_ArcaneWeapons</li>
							<li>DankPyon_Jewelry</li>
						</researchPrerequisites>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>