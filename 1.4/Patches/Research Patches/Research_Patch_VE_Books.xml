<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Books Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName="Esoteric_Studies"]</xpath>
					<value>
						<prerequisites>
							<li>VBE_Writing</li>
						</prerequisites>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName="Esoteric_Studies"]/baseCost</xpath>
					<value>
						<baseCost>500</baseCost>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName="VBE_Writing" or defName="VBE_Printing"]/tab</xpath>
					<value>
						<tab>
							<li>DankPyon_MedievalResearchTab</li>
						</tab>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName="VBE_Writing"]/researchViewX</xpath>
					<value>
						<researchViewX>12.00</researchViewX>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName="VBE_Writing"]/researchViewY</xpath>
					<value>
						<researchViewY>5.65</researchViewY>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName="VBE_Printing"]/researchViewX</xpath>
					<value>
						<researchViewX>12.00</researchViewX>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName="VBE_Printing"]/researchViewY</xpath>
					<value>
						<researchViewY>6.25</researchViewY>
					</value>
				</li>
				
			</operations>
		</match>
			
	</Operation>
	
</Patch>
