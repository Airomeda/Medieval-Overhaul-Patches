<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>VR.MOPatches</modId>
		<key>jewelry_decay</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="DankPyon_NecklaceBase"]/statBases</xpath>
				<value>
					<DeteriorationRate>0</DeteriorationRate>
				</value>
			</Operation>
			<Operation Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="DankPyon_RingBase"]/statBases</xpath>
				<value>
					<DeteriorationRate>0</DeteriorationRate>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>VR.MOPatches</modId>
		<key>lindwurm_giddyup</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationAddModExtension">
						<xpath>Defs/ThingDef[defName = "DankPyon_LindwurmForest" or defName="DankPyon_LindwurmCave"]</xpath>
						<value>
							<li Class="GiddyUp.NotMountable"/>
						</value>
			</Operation>
		</caseTrue>
	</Operation>

</Patch>