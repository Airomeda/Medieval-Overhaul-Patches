	<Operation Class="XmlExtensions.FindMod">
		<mods>
			<li>RimCuisine 2 Core (Continued)</li>
		</mods>
		<caseTrue>
			<Operation Class="PatchOperationAdd">
				<xpath>Defs/XmlExtensions.SettingsMenuDef[modId="VR.MOPatches"]/settings/li[contains(.,'trimmed_meat')]/buttons</xpath>
				<value>
					<li>
						<label>RC2 Trimmed Meat Recipe:</label>
						<value>option3</value>
						<tooltip>For when you want to use RimCuisine2 trimmed meat.</tooltip>
						<highlight>true</highlight>
					</li>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	
	
	<Operation Class="XmlExtensions.FindMod">
		<mods>
			<li>RimCuisine 2 Core (Continued)</li>
		</mods>
		<caseTrue>
			<Operation Class="XmlExtensions.UseSetting">
				<modId>VR.MOPatches</modId>
				<key>trimmed_meat</key>
				<defaultValue>option2</defaultValue>
				<apply>
					<Operation Class="XmlExtensions.PatchByCase">
						<value>{trimmed_meat}</value>
						<cases>
							<li>
								<value>option1</value>
								<apply>
									<Operation Class="PatchOperationRemove">
										<xpath>Defs/ThingDef[defName="DankPyon_TrimmedMeat"]</xpath>
									</Operation>
									<Operation Class="PatchOperationRemove">
										<xpath>Defs/RecipeDef[defName="DankPyon_TrimmedMeat"]</xpath>
									</Operation>
									<Operation Class="PatchOperationRemove">
										<xpath>Defs/RecipeDef[defName="DankPyon_TrimmedMeat_Bulk"]</xpath>
									</Operation>
									<Operation Class="PatchOperationConditional">
										<xpath>Defs/RecipeDef[defName="RC2_TrimMeat"]</xpath>
										<match Class="PatchOperationRemove">
											<xpath>Defs/RecipeDef[defName="RC2_TrimMeat"]</xpath>
										</match>
									</Operation>
									<Operation Class="PatchOperationConditional">
										<xpath>Defs/RecipeDef[defName="RC2_TrimMeatBulk"]</xpath>
										<match Class="PatchOperationRemove">
											<xpath>Defs/RecipeDef[defName="RC2_TrimMeatBulk"]</xpath>
										</match>
									</Operation>
								</apply>
							</li>
							<li>
								<value>option2</value>
								<apply>
									<Operation Class="PatchOperationConditional">
										<xpath>Defs/RecipeDef[defName="RC2_TrimMeat"]</xpath>
										<match Class="PatchOperationRemove">
											<xpath>Defs/RecipeDef[defName="RC2_TrimMeat"]</xpath>
										</match>
									</Operation>
									<Operation Class="PatchOperationConditional">
										<xpath>Defs/RecipeDef[defName="RC2_TrimMeatBulk"]</xpath>
										<match Class="PatchOperationRemove">
											<xpath>Defs/RecipeDef[defName="RC2_TrimMeatBulk"]</xpath>
										</match>
									</Operation>
								</apply>
							</li>
							<li>
								<value>option3</value>
								<apply>
									<Operation Class="PatchOperationReplace">
										<xpath>Defs/ProcessorFramework.ProcessDef[defName="DankPyon_DriedMeatProcess"]/ingredientFilter/thingDefs</xpath>
										<value>
											<thingDefs>
												<li>RC2_TrimmedMeat</li>
											</thingDefs>
										</value>
									</Operation>
									<Operation Class="PatchOperationReplace">
										<xpath>Defs/ProcessorFramework.ProcessDef[defName="DankPyon_SmokedMeatProcess"]/ingredientFilter/thingDefs</xpath>
										<value>
											<thingDefs>
												<li>RC2_TrimmedMeat</li>
											</thingDefs>
										</value>
									</Operation>
									<Operation Class="PatchOperationAdd">
										<xpath>Defs/RecipeDef[defName="RC2_TrimMeat"]/fixedIngredientFilter</xpath>
										<value>
											<disallowedCategories>
												<li>DankPyon_DriedFood</li>
											</disallowedCategories>
										</value>
									</Operation>
									<Operation Class="PatchOperationAdd">
										<xpath>Defs/RecipeDef[defName="RC2_TrimMeat"]/fixedIngredientFilter/disallowedThingDefs</xpath>
										<value>
											<li>DankPyon_TrimmedMeat</li>
											<li>DankPyon_FakeMeat</li>
											<li>DankPyon_FakeMeat_Insect</li>
										</value>
									</Operation>
									<Operation Class="PatchOperationRemove">
										<xpath>Defs/ThingDef[defName="DankPyon_TrimmedMeat"]</xpath>
									</Operation>
									<Operation Class="PatchOperationRemove">
										<xpath>Defs/RecipeDef[defName="DankPyon_TrimmedMeat"]</xpath>
									</Operation>
									<Operation Class="PatchOperationRemove">
										<xpath>Defs/RecipeDef[defName="DankPyon_TrimmedMeat_Bulk"]</xpath>
									</Operation>
								</apply>
							</li>
						</cases>
					</Operation>
				</apply>
			</Operation>
	
		</caseTrue>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>RimCuisine 2 Core (Continued)</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<li Class="XmlExtensions.OptionalPatch">
					<modId>VR.MOPatches</modId>
					<key>building_bloat</key>
					<defaultValue>true</defaultValue>
					<caseTrue>
						<Operation Class="PatchOperationConditional">
							<xpath>Defs/ThingDef[defName="RC2_Quernstone"]/researchPrerequisites</xpath>
							<match Class="PatchOperationRemove">
								<xpath>Defs/ThingDef[defName="RC2_Quernstone"]/researchPrerequisites</xpath>
							</match>
						</Operation>
						<Operation Class="PatchOperationConditional">
							<xpath>Defs/ThingDef[defName="RC2_Quernstone"]/designationCategory</xpath>
							<match Class="PatchOperationRemove">
								<xpath>Defs/ThingDef[defName="RC2_Quernstone"]/designationCategory</xpath>
							</match>
						</Operation>
						<Operation Class="PatchOperationConditional">
							<xpath>Defs/ThingDef[defName="RC2_MeatDryingRack"]/researchPrerequisites</xpath>
							<match Class="PatchOperationRemove">
								<xpath>Defs/ThingDef[defName="RC2_MeatDryingRack"]/researchPrerequisites</xpath>
							</match>
						</Operation>
						<Operation Class="PatchOperationConditional">
							<xpath>Defs/ThingDef[defName="RC2_MeatDryingRack"]/designationCategory</xpath>
							<match Class="PatchOperationRemove">
								<xpath>Defs/ThingDef[defName="RC2_MeatDryingRack"]/designationCategory</xpath>
							</match>
						</Operation>
					</caseTrue>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>