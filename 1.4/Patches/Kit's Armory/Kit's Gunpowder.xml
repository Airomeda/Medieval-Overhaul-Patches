<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Kit's Gunpowder Weapons</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- Remove Blackpowder -->
				<li Class="PatchOperationConditional">
					<xpath>Defs/ResearchProjectDef[defName="KIT_Blackpowder"]</xpath>
					<match Class="PatchOperationRemove">
						<xpath>Defs/ResearchProjectDef[defName="KIT_Blackpowder"]</xpath>
					</match>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName="KIT_LineInfantry"]/tab</xpath>
					<value>
						<tab>DankPyon_MedievalResearchTab</tab>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName="KIT_LineInfantry"]/researchViewX</xpath>
					<value>
						<researchViewX>16.00</researchViewX>
					</value>
				</li>
	
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName="KIT_LineInfantry"]/researchViewY</xpath>
					<value>
						<researchViewY>5.20</researchViewY>
					</value>
				</li>

				<!-- Change Research -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Combat Extended</li>
					</mods>

					<match Class="PatchOperationSequence">
						<operations>

							<!-- Line Infantry Research -->
							<li Class="PatchOperationReplace">
								<xpath>Defs/ResearchProjectDef[defName="KIT_LineInfantry"]/prerequisites</xpath>
								<value>
									<prerequisites>
										<li>CE_Gunpowder</li>
									</prerequisites>
								</value>
							</li>

							<!-- Gun -->
							<li Class="PatchOperationConditional">
								<xpath>Defs/ThingDef[defName="KIT_Gun_Arquebus"]/recipeMaker/researchPrerequisite</xpath>
								<match Class="PatchOperationReplace">
									<xpath>Defs/ThingDef[defName="KIT_Gun_Arquebus"]/recipeMaker/researchPrerequisite</xpath>
									<value>
										<researchPrerequisite>CE_Gunpowder</researchPrerequisite>
									</value>
								</match>
							</li>

							<!-- Organ Turret -->
							<li Class="PatchOperationConditional">
								<xpath>Defs/ThingDef[defName="KIT_Turret_Organ"]/researchPrerequisites</xpath>
								<match Class="PatchOperationReplace">
									<xpath>Defs/ThingDef[defName="KIT_Turret_Organ"]/researchPrerequisites</xpath>
									<value>
										<researchPrerequisites>
											<li>CE_Gunpowder</li>
										</researchPrerequisites>
									</value>
								</match>
							</li>
							
							<!-- Organ Turret -->
							<li Class="PatchOperationConditional">
								<xpath>Defs/ThingDef[defName="KIT_Turret_Bombard"]/researchPrerequisites</xpath>
								<match Class="PatchOperationReplace">
									<xpath>Defs/ThingDef[defName="KIT_Turret_Bombard"]/researchPrerequisites</xpath>
									<value>
										<researchPrerequisites>
											<li>CE_Gunpowder</li>
										</researchPrerequisites>
									</value>
								</match>
							</li>

						</operations>
					</match>

					<nomatch Class="PatchoperationSequence">
						<operations>

							<li Class="PatchOperationReplace">
								<xpath>Defs/ResearchProjectDef[defName="KIT_LineInfantry"]/prerequisites</xpath>
								<value>
									<prerequisites>
										<li>DankPyon_Gunpowder</li>
									</prerequisites>
								</value>
							</li>

							<li Class="PatchOperationConditional">
								<xpath>Defs/ThingDef[defName="KIT_Gun_Arquebus"]/recipeMaker/researchPrerequisite</xpath>
								<match Class="PatchOperationReplace">
									<xpath>Defs/ThingDef[defName="KIT_Gun_Arquebus"]/recipeMaker/researchPrerequisite</xpath>
									<value>
										<researchPrerequisite>DankPyon_Gunpowder</researchPrerequisite>
									</value>
								</match>
							</li>

							<!-- Organ Turret -->
							<li Class="PatchOperationConditional">
								<xpath>Defs/ThingDef[defName="KIT_Turret_Organ"]/researchPrerequisites</xpath>
								<match Class="PatchOperationReplace">
									<xpath>Defs/ThingDef[defName="KIT_Turret_Organ"]/researchPrerequisites</xpath>
									<value>
										<researchPrerequisites>
											<li>DankPyon_Gunpowder</li>
										</researchPrerequisites>
									</value>
								</match>
							</li>
							
							<!-- Organ Turret -->
							<li Class="PatchOperationConditional">
								<xpath>Defs/ThingDef[defName="KIT_Turret_Bombard"]/researchPrerequisites</xpath>
								<match Class="PatchOperationReplace">
									<xpath>Defs/ThingDef[defName="KIT_Turret_Bombard"]/researchPrerequisites</xpath>
									<value>
										<researchPrerequisites>
											<li>DankPyon_Gunpowder</li>
										</researchPrerequisites>
									</value>
								</match>
							</li>

						</operations>
					</nomatch>
				</li>

				<!--li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="KIT_Turret_Organ"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs/li[.="Steel"]</xpath>
					<match Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="KIT_Turret_Organ"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs/li[.="Steel"]</xpath>
						<value>
							<li>DankPyon_IronIngot</li>
						</value>
					</match>
				</li-->
				
				<!--li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="KIT_Turret_12Pounder"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs/li[.="Steel"]</xpath>
					<match Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="KIT_Turret_12Pounder"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs/li[.="Steel"]</xpath>
						<value>
							<li>DankPyon_IronIngot</li>
						</value>
					</match>
				</li-->

				<!-- Material Patches -->
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="KIT_Gun_Arquebus"]/costList/ComponentIndustrial</xpath>
					<match Class="PatchOperationSetName">
						<xpath>Defs/ThingDef[defName="KIT_Gun_Arquebus"]/costList/ComponentIndustrial</xpath>
						<name>DankPyon_ComponentBasic</name>
					</match>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="KIT_Gun_BayonetMusket"]/costList/ComponentIndustrial</xpath>
					<match Class="PatchOperationSetName">
						<xpath>Defs/ThingDef[defName="KIT_Gun_BayonetMusket"]/costList/ComponentIndustrial</xpath>
						<name>DankPyon_ComponentBasic</name>
					</match>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="KIT_Gun_BayonetMusket"]/costList/ComponentIndustrial</xpath>
					<match Class="PatchOperationSetName">
						<xpath>Defs/ThingDef[defName="KIT_Gun_BayonetMusket"]/costList/ComponentIndustrial</xpath>
						<name>DankPyon_ComponentBasic</name>
					</match>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="KIT_Bullet_Blunderbuss"]/costList/ComponentIndustrial</xpath>
					<match Class="PatchOperationSetName">
						<xpath>Defs/ThingDef[defName="KIT_Bullet_Blunderbuss"]/costList/ComponentIndustrial</xpath>
						<name>DankPyon_ComponentBasic</name>
					</match>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="KIT_Bullet_HandMortar"]/costList/ComponentIndustrial</xpath>
					<match Class="PatchOperationSetName">
						<xpath>Defs/ThingDef[defName="KIT_Bullet_HandMortar"]/costList/ComponentIndustrial</xpath>
						<name>DankPyon_ComponentBasic</name>
					</match>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="KIT_Turret_Organ"]/costList/ComponentIndustrial</xpath>
					<match Class="PatchOperationSetName">
						<xpath>Defs/ThingDef[defName="KIT_Turret_Organ"]/costList/ComponentIndustrial</xpath>
						<name>DankPyon_ComponentBasic</name>
					</match>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="KIT_Turret_12Pounder"]/costList/ComponentIndustrial</xpath>
					<match Class="PatchOperationSetName">
						<xpath>Defs/ThingDef[defName="KIT_Turret_12Pounder"]/costList/ComponentIndustrial</xpath>
						<name>DankPyon_ComponentBasic</name>
					</match>
				</li>

				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="KIT_Turret_Bombard"]/costList/ComponentIndustrial</xpath>
					<match Class="PatchOperationSetName">
						<xpath>Defs/ThingDef[defName="KIT_Turret_Bombard"]/costList/ComponentIndustrial</xpath>
						<name>DankPyon_ComponentBasic</name>
					</match>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>