							<WoodLog>360</WoodLog>
							<Cloth>130</Cloth>
							<Steel>70</Steel>
							<DankPyon_Silk>50</DankPyon_Silk>
						</killedLeavings>
					</value>
				</li>
					
				<!-- Remove Breakdown -->
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[
						defName="SADinghy" or
						defName="SAPioneer" or
						defName="SAFatMuffalo" or
						defName="SASpitefulMoth" or
						defName="SAAdvancedpioneer" or
						defName="SASandmanta"
						]/comps/li[@Class="CompProperties_Breakdownable"]					</xpath>
					<match Class="PatchOperationRemove">
						<xpath>Defs/ThingDef[defName="SASandmanta"]/comps/li[@Class="CompProperties_Breakdownable"]</xpath>
					</match>
				</li>
					
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[
						defName="SADinghy" or
						defName="SAPioneer" or
						defName="SAFatMuffalo" or
						defName="SASpitefulMoth" or
						defName="SAAdvancedpioneer" or
						defName="SASandmanta"
						]/comps/li[@Class="CompProperties_Flickable"]					</xpath>
				</li>
					
				<!-- Fuel -->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[
						defName="SAPioneer" or
						defName="SAFatMuffalo" or
						defName="SASpitefulMoth" or
						defName="SAAdvancedpioneer" or
						defName="SASandmanta"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs/li[.="WoodLog"]					</xpath>
				</li>
					
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="SADinghy"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs</xpath>
					<value>
						<li>DankPyon_RawWood</li>
						<li>DankPyon_RawDarkWood</li>
						<li>DankPyon_DarkWoodLog</li>
						<li>DankPyon_ElvenWoodLog</li>
						<li>DankPyon_DryadWoodLog</li>
						<li>DankPyon_AncientWoodLog</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
						defName="SAPioneer" or
						defName="SAFatMuffalo" or
						defName="SASpitefulMoth" or
						defName="SAAdvancedpioneer" or
						defName="SASandmanta"
						]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs					</xpath>
					<value>
						<li>DankPyon_RawWood</li>
						<li>DankPyon_RawDarkWood</li>
						<li>DankPyon_DarkWoodLog</li>
						<li>DankPyon_ElvenWoodLog</li>
						<li>DankPyon_DryadWoodLog</li>
						<li>DankPyon_AncientWoodLog</li>
						<li>DankPyon_Coal</li>
					</value>
				</li>
					
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[
						defName="SADinghy" or
						defName="SAPioneer" or
						defName="SAFatMuffalo" or
						defName="SASpitefulMoth" or
						defName="SAAdvancedpioneer" or
						defName="SASandmanta"
						]/comps/li[@Class="CompProperties_Refuelable"]/initialFuelPercent					</xpath>
					<value>
						<initialFuelPercent>0.01</initialFuelPercent>
					</value>
				</li>
					
				<!-- Ship Balance HP -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="SASpitefulMoth"]/statBases/MaxHitPoints</xpath>
					<value>
						<MaxHitPoints>1000</MaxHitPoints>
					</value>
				</li>
					
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="SASandmanta"]/statBases/MaxHitPoints</xpath>
					<value>
						<MaxHitPoints>1200</MaxHitPoints>
					</value>
				</li>
						
				<!-- Resize -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[
								defName="SADinghy" or
								defName="SADinghy_Incoming" or
								defName="SADinghy_BomberRun" or
								defName="SADinghy_Leaving" or
								defName="SADinghy_Active"]/graphicData/drawSize					</xpath>
					<value>
						<drawSize>(6,6)</drawSize>
					</value>
				</li>
					
