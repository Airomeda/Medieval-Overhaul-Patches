					<xpath>/Defs/ThingDef[
								defName="SAFatMuffalo" or
								defName="SAFatMuffalo_Incoming" or
								defName="SAFatMuffalo_BomberRun" or
								defName="SAFatMuffalo_Leaving" or
								defName="SAFatMuffalo_Active"]/graphicData/drawSize					</xpath>
					<value>
						<drawSize>(16,16)</drawSize>
					</value>
