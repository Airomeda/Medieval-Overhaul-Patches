<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ESCP - Trolls</li>
		</mods>
		<match Class="PatchOperationFindMod">
			<mods>
				<li>Biotech</li>
			</mods>
			<match Class="PatchOperationSequence">
				<operations>

					<li Class="PatchOperationAdd">
						<xpath>Defs/PawnKindDef [defName="ESCP_TrollToxi"]/lifeStages/li[3]</xpath>
						<value>
							<butcherBodyPart>
								<bodyPartGroup>HeadAttackTool</bodyPartGroup>
								<thing>DankPyon_Hide_TrollHeavy</thing>
								<allowFemale>true</allowFemale>
							</butcherBodyPart>
						</value>
					</li>

					<li Class="PatchOperationAdd">
						<xpath>Defs/PawnKindDef [defName="ESCP_TrollHaemo"]/lifeStages/li[3]</xpath>
						<value>
							<butcherBodyPart>
								<bodyPartGroup>HeadAttackTool</bodyPartGroup>
								<thing>DankPyon_Hide_TrollHeavy</thing>
								<allowFemale>true</allowFemale>
							</butcherBodyPart>
						</value>
					</li>



				</operations>
			</match>
		</match>
	</Operation>
</Patch>
