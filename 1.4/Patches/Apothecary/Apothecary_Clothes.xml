<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Apothecary (Continued)</li>
		</mods>
		
		<match Class="PatchOperationSequence">
			<operations>
			
				<!-- Apothecary Outfit -->
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AYapothecaryOutfit"]/recipeMaker/researchPrerequisite</xpath>
					<match Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="AYapothecaryOutfit"]/recipeMaker/researchPrerequisite</xpath>
						<value>
							<researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AYapothecaryOutfit"]</xpath>
						<value>
							<recipeMaker>
								<researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
							</recipeMaker>
						</value>
					</nomatch>
				</li>
				
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AYapothecaryhat"]/recipeMaker/researchPrerequisite</xpath>
					<match Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="AYapothecaryhat"]/recipeMaker/researchPrerequisite</xpath>
						<value>
							<researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AYapothecaryhat"]</xpath>
						<value>
							<recipeMaker>
								<researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
							</recipeMaker>
						</value>
					</nomatch>
				</li>
				
				<!-- Herbalist Outfit -->
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AYHerbalistOutfit"]/recipeMaker/researchPrerequisite</xpath>
					<match Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="AYHerbalistOutfit"]/recipeMaker/researchPrerequisite</xpath>
						<value>
							<researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AYHerbalistOutfit"]</xpath>
						<value>
							<recipeMaker>
								<researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
							</recipeMaker>
						</value>
					</nomatch>
				</li>
				
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AYHerbalistHat"]/recipeMaker/researchPrerequisite</xpath>
					<match Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="AYHerbalistHat"]/recipeMaker/researchPrerequisite</xpath>
						<value>
							<researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AYHerbalistHat"]</xpath>
						<value>
							<recipeMaker>
								<researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
							</recipeMaker>
						</value>
					</nomatch>
				</li>
				
			</operations>
		</match>
		
	</Operation>
	
</Patch>