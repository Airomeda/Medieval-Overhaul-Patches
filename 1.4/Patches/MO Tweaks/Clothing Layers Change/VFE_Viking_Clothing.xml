<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Vikings</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="VFEV_Apparel_JarlCape"]</xpath>
					<value>
						<li Class="VFECore.ApparelDrawPosExtension">
							<apparelDrawSettings>
								<drawPosNorthOffset>(0, 0.2, 0)</drawPosNorthOffset>
								<drawPosSouthOffset>(0, 0.005, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0.08,  0.005, 0)</drawPosWestOffset>
								<drawPosEastOffset>(-0.08,  0.005, 0)</drawPosEastOffset>
							</apparelDrawSettings>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="VFEV_Apparel_RoyalFurCoat"]</xpath>
					<value>
						<li Class="VFECore.ApparelDrawPosExtension">
							<apparelDrawSettings>
								<drawPosNorthOffset>(0, 0.01, 0)</drawPosNorthOffset>
								<drawPosSouthOffset>(0, 0.001, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0.1,  0.001, 0)</drawPosWestOffset>
								<drawPosEastOffset>(-0.1,  0.001, 0)</drawPosEastOffset>
							</apparelDrawSettings>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="VFEV_Apparel_JarlCape" or defName="VFEV_Apparel_RoyalFurCoat"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>DankPyon_ShellAttachment</li>
						</layers>
					</value>
				</li>
				
				<!-- Shell Armor -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[
					defName="VFEV_Apparel_GuardianArmor" or
					defName="VFEV_Apparel_RavagerArmor"]
					</xpath>
					<value>
						<li Class="VFECore.ApparelDrawPosExtension">
							<shellPosDrawSettings>
								<drawPosSouthOffset>(0, -0.004, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0,  -0.004, 0)</drawPosWestOffset>
								<drawPosEastOffset>(0,  -0.004, 0)</drawPosEastOffset>
							</shellPosDrawSettings>
						</li>
					
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
</Patch>