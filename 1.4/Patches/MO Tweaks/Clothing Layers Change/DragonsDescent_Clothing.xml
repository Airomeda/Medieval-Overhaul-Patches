<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dragons Descent</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="DD_Apparel_WingCape"]</xpath>
					<value>
						<li Class="VFECore.ApparelDrawPosExtension">
							<apparelDrawSettings>
								<drawPosNorthOffset>(0, 0.01, -.1)</drawPosNorthOffset>
								<drawPosSouthOffset>(0, 0.005, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0,  0.005, 0)</drawPosWestOffset>
								<drawPosEastOffset>(0,  0.005, 0)</drawPosEastOffset>
							</apparelDrawSettings>
						</li>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DD_Apparel_WingCape"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>DankPyon_ShellAttachment</li>
						</layers>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DD_Apparel_ScaleMail"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>Shell</li>
						</layers>
					</value>
				</li>
				
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="DD_Apparel_ScaleMail"]</xpath>
					<value>
						<li Class="VFECore.ApparelDrawPosExtension">
							<shellPosDrawSettings>
								<drawPosSouthOffset>(0, -0.004, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0,  -0.004, 0)</drawPosWestOffset>
								<drawPosEastOffset>(0,  -0.004, 0)</drawPosEastOffset>
							</shellPosDrawSettings>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>