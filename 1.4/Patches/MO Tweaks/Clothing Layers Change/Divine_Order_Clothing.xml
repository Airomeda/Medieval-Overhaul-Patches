<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Divine Order</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Combat Extended</li>
					</mods>
					<nomatch Class="PatchOperationAddModExtension">
						<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderCloak" or defName="BotchJob_InquisitorCloak"]</xpath>
						<value>
							<li Class="VFECore.ApparelDrawPosExtension">
								<apparelDrawSettings>
								<drawPosNorthOffset>(0, 0.01, 0.05)</drawPosNorthOffset>
								<drawPosSouthOffset>(0, 0.005, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0,  0.005, 0.05)</drawPosWestOffset>
								<drawPosEastOffset>(0,  0.005, 0.05)</drawPosEastOffset>
								</apparelDrawSettings>
							</li>
						</value>
					</nomatch>
					<match Class="PatchOperationAddModExtension">
						<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderCloak" or defName="BotchJob_InquisitorCloak"]</xpath>
						<value>
							<li Class="VFECore.ApparelDrawPosExtension">
								<apparelDrawSettings>
								<drawPosNorthOffset>(0, 0.01, 0.05)</drawPosNorthOffset>
								<drawPosSouthOffset>(0, 0.002, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0,  0.002, 0.05)</drawPosWestOffset>
								<drawPosEastOffset>(0,  0.002, 0.05)</drawPosEastOffset>
								</apparelDrawSettings>
							</li>
						</value>
					</match>
				</li>
				
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Combat Extended</li>
					</mods>
					<nomatch Class="PatchOperationAddModExtension">
						<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderFurCloak"]</xpath>
						<value>
							<li Class="VFECore.ApparelDrawPosExtension">
								<apparelDrawSettings>
								<drawPosNorthOffset>(0, 0.2, 0)</drawPosNorthOffset>
								<drawPosSouthOffset>(0, 0.001, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0,  0.001, 0.05)</drawPosWestOffset>
								<drawPosEastOffset>(0,  0.001, 0.05)</drawPosEastOffset>
								</apparelDrawSettings>
							</li>
						</value>
					</nomatch>
					<match Class="PatchOperationAddModExtension">
						<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderFurCloak"]</xpath>
						<value>
							<li Class="VFECore.ApparelDrawPosExtension">
								<apparelDrawSettings>
								<drawPosNorthOffset>(0, 0.2, 0)</drawPosNorthOffset>
								<drawPosSouthOffset>(0, 0.002, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0,  0.002, 0.05)</drawPosWestOffset>
								<drawPosEastOffset>(0,  0.002, 0.05)</drawPosEastOffset>
								</apparelDrawSettings>
							</li>
						</value>
					</match>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderCloak" or defName="BotchJob_DivineOrderFurCloak" or defName="BotchJob_InquisitorCloak"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>DankPyon_ShellAttachment</li>
						</layers>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_CrusaderArmor"]/apparel/layers</xpath>
					<value>
						<li>DankPyon_ShellAttachment</li>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_InquisitorArmor"]/apparel/layers/li[.="OnSkin"]</xpath>
					<value>
						<li>Shell</li>
					</value>
				</li>
				<!--
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateArmor"]</xpath>
					<value>
						<li Class="VFECore.ApparelDrawPosExtension">
							<shellPosDrawSettings>
								<drawPosSouthOffset>(0, -0.004, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0,  -0.004, 0)</drawPosWestOffset>
								<drawPosEastOffset>(0,  -0.004, 0)</drawPosEastOffset>
							</shellPosDrawSettings>
						</li>
					</value>
				</li> -->

			</operations>
		</match>
	</Operation>

</Patch>