<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Medievel Tailor</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_WinterCloak" or defName="AMT_Apparel_Cloak"]</xpath>
					<value>
						<li Class="VFECore.ApparelDrawPosExtension">
							<apparelDrawSettings>
								<drawPosNorthOffset>(0, 0.01, -.05)</drawPosNorthOffset>
								<drawPosSouthOffset>(0, 0.005, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0.05,  0.005, 0)</drawPosWestOffset>
								<drawPosEastOffset>(-.05,  0.005, 0)</drawPosEastOffset>
							</apparelDrawSettings>
						</li>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_WinterCloak" or defName="AMT_Apparel_Cloak"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>DankPyon_ShellAttachment</li>
						</layers>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AMT_Apparel_Cloak" or defName="AMT_Apparel_WinterCloak"]/apparel/bodyPartGroups</xpath>
					<value>
						<li>Shoulders</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>