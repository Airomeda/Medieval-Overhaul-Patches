<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>‚ÜÅ Elves</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
					<li Class="PatchOperationFindMod">
					<mods>
						<li>Combat Extended</li>
					</mods>
					<nomatch Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[@Name="DevDesigner_Cloaks"]/modExtensions/li[@Class="VFECore.ApparelDrawPosExtension"]</xpath>
						<value>
							<li Class="VFECore.ApparelDrawPosExtension">
								<apparelDrawSettings>
									<drawPosNorthOffset>(0, 0.2, -0.05)</drawPosNorthOffset>
								<drawPosSouthOffset>(0, 0.005, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0.1,  0.005, 0)</drawPosWestOffset>
								<drawPosEastOffset>(-.1,  0.005, 0)</drawPosEastOffset>
								</apparelDrawSettings>
							</li>
						</value>
					</nomatch>
					<match Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[@Name="DevDesigner_Cloaks"]/modExtensions/li[@Class="VFECore.ApparelDrawPosExtension"]</xpath>
						<value>
							<li Class="VFECore.ApparelDrawPosExtension">
								<apparelDrawSettings>
									<drawPosNorthOffset>(0, 0.2, -0.05)</drawPosNorthOffset>
								<drawPosSouthOffset>(0, 0.001, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0,  0.001, 0)</drawPosWestOffset>
								<drawPosEastOffset>(0,  0.001, 0)</drawPosEastOffset>
								</apparelDrawSettings>
							</li>
						</value>
					</match>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="DevDesigner_Cloaks"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>DankPyon_ShellAttachment</li>
						</layers>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="DevDesigner_Cloaks"]/apparel/bodyPartGroups</xpath>
					<value>
						<li>Shoulders</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[@Name="DevDesigner_Elves_BreastplateBase" or @Name="DevDesigner_Elves_MetalPauldrons"]</xpath>
					<value>
						<li Class="VFECore.ApparelDrawPosExtension">
							<shellPosDrawSettings>
								<drawPosSouthOffset>(0, -0.004, 0)</drawPosSouthOffset>
								<drawPosWestOffset>(0,  -0.004, 0)</drawPosWestOffset>
								<drawPosEastOffset>(0,  -0.004, 0)</drawPosEastOffset>
							</shellPosDrawSettings>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>