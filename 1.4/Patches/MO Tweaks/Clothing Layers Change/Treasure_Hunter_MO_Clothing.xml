<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Treasure Hunter (MO Beta)</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationFindMod">
					<mods>
						<li>Combat Extended</li>
					</mods>
					<nomatch Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[@Name="EEG_SimpleCapeBase"]/modExtensions/li[@Class="VFECore.ApparelDrawPosExtension"]</xpath>
						<value>
							<li Class="VFECore.ApparelDrawPosExtension">
								<apparelDrawSettings>
									<drawPosNorthOffset>(0, 0.01, 0)</drawPosNorthOffset>
									<drawPosSouthOffset>(0, 0.005, 0)</drawPosSouthOffset>
									<drawPosWestOffset>(0.05,  0.005, 0)</drawPosWestOffset>
									<drawPosEastOffset>(-.05,  0.005, 0)</drawPosEastOffset>
								</apparelDrawSettings>
							</li>
						</value>
					</nomatch>
					<match Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[@Name="EEG_SimpleCapeBase"]/modExtensions/li[@Class="VFECore.ApparelDrawPosExtension"]</xpath>
						<value>
							<li Class="VFECore.ApparelDrawPosExtension">
								<apparelDrawSettings>
									<drawPosNorthOffset>(0, 0.01, 0)</drawPosNorthOffset>
									<drawPosSouthOffset>(0, 0.002, -0.01)</drawPosSouthOffset>
									<drawPosWestOffset>(0.05,  0.002, 0)</drawPosWestOffset>
									<drawPosEastOffset>(-.05,  0.002, 0)</drawPosEastOffset>
								</apparelDrawSettings>
							</li>
						</value>
					</match>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="EEG_SimpleCapeBase"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>DankPyon_ShellAttachment</li>
						</layers>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>