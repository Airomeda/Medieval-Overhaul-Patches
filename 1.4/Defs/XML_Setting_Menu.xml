<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<XmlExtensions.SettingsMenuDef>
		<defName>VR_MO_Patch</defName><!--Can be anything unique with no periods-->
		<modId>VR.MOPatches</modId><!--MUST be the same as the one entered earlier-->
		<label>Medieval Overhaul Patches</label><!-- This is what displays as your mod's name-->
		<settings><!--This is where you define what settings are in the settings menu-->
			<li Class="XmlExtensions.Setting.SetColor">
                <color>(255,100,0)</color>
            </li>
            <li Class="XmlExtensions.Setting.Text">
                <text>Changes require restarting RimWorld</text>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.SetColor"/>
			<li Class="XmlExtensions.Setting.GapLine"/>
			<li Class="XmlExtensions.Setting.Text">
				<text>Bloat Lovers Special</text>
				<anchor>Middle</anchor>
			</li>
			<li Class="XmlExtensions.Setting.Checkbox">
				<key>plant_bloat</key>
				<label>Remove plant duplicates?</label>
				<tooltip>Removes duplicate plants that already exist.</tooltip>
				<defaultValue>true</defaultValue>
			</li>
			<li Class="XmlExtensions.Setting.Checkbox">
				<key>building_bloat</key>
				<label>Remove building duplicates?</label>
				<tooltip>Removes duplicate buildings that already exist.</tooltip>
				<defaultValue>true</defaultValue>
			</li>
			<li Class="XmlExtensions.Setting.GapLine"/>
			<li Class="XmlExtensions.Setting.Text">
				<text>Modify Research Costs</text>
				<anchor>Middle</anchor>
			</li>
			<li Class="XmlExtensions.Setting.Numeric">
				<key>esoteric_cost</key>
				<label>Esoteric Studies:</label>
				<defaultValue>1000</defaultValue>
				<min>500</min>
				<max>10000</max>
			</li>
			<li Class="XmlExtensions.Setting.GapLine"/>
			<li Class="XmlExtensions.Setting.Text">
				<text>Individual Tweaks</text>
				<anchor>Middle</anchor>
			</li>
			<li Class="XmlExtensions.Setting.Checkbox">
				<key>jewelry_decay</key>
				<label>Remove jewelry decay?</label>
				<tooltip>Removes deterioration for jewelry.</tooltip>
				<defaultValue>true</defaultValue>
			</li>
			<li Class="XmlExtensions.Setting.Checkbox">
				<key>food_quality</key>
				<label>Wine/Cheese Quality?</label>
				<tooltip>Adds quality for wine and cheeses.</tooltip>
				<defaultValue>true</defaultValue>
			</li>
			<li Class="XmlExtensions.Setting.Checkbox">
				<key>dried_smoked_food</key>
				<label>Dried Meat Nutrition Change?</label>
				<tooltip>Turn regular dried meat into a raw ingredient with lowered nutrition and cost to make. Best for perserving meats through winter. Due to hardcoded issues, human and insect meals will not be changed.</tooltip>
				<defaultValue>true</defaultValue>
			</li>
			<li Class="XmlExtensions.Setting.Checkbox">
				<key>boomalope_tar</key>
				<label>Boomalopes Milk Tar?</label>
				<tooltip>Replaces Chemfuel for Tar when milking Boomalopes.</tooltip>
				<defaultValue>false</defaultValue>
			</li>
			<li Class="XmlExtensions.Setting.Checkbox">
				<key>alchemical_drug</key>
				<label>Alchemy Table Drugs?</label>
				<tooltip>Allows the alchemy table to inherit drug recipes.</tooltip>
				<defaultValue>false</defaultValue>
			</li>
			<li Class="XmlExtensions.Setting.Gap">
				<spacing>12</spacing>
			</li>
			<li Class="XmlExtensions.Setting.Text">
				<text>Trimmed Meat Options:</text>
				<anchor>Middle</anchor>
			</li>
			<li Class="XmlExtensions.Setting.RadioButtons">
				<key>trimmed_meat</key>
				<defaultValue>option2</defaultValue>
				<spacing>-1</spacing>
				<buttons>
					<li>
						<label>None:</label>
						<value>option1</value>
						<tooltip>This only prevents trimmed meat for normal meat.  Due to hardcoded issues, human and insect meals will not be changed.</tooltip>
						<highlight>true</highlight>
					</li>
					<li>
						<label>MO Trimmed Meat Recipe:</label>
						<value>option2</value>
						<tooltip>This enables a trimmed meat recipe. Best used with Ideology and venerated animals.</tooltip>
						<highlight>true</highlight>
					</li>
					<!--All buttons listed here-->
				</buttons>
			</li>
			<li Class="XmlExtensions.Setting.Gap">
				<spacing>12</spacing>
			</li>
			<li Class="XmlExtensions.Setting.Gap">
				<spacing>12</spacing>
			</li>
			<li Class="XmlExtensions.Setting.Checkbox">
				<key>mo_wild_plants</key>
				<label>Wild MO Plants?</label>
				<tooltip>Adds various Medieval Overhaul plants to biomes as wild plants.</tooltip>
				<defaultValue>false</defaultValue>
			</li>
			<li Class="XmlExtensions.Setting.ResetSettings"/>
		</settings>
	</XmlExtensions.SettingsMenuDef>

</Defs>